{% extends "admin/layout.twig" %}

{% block content %}
<div class="row">
    <div class="col-sm-9">
        <h1><a href="/admin">Admin</a></h1>
        {% for event in events %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <a href="/admin/history/{{ event.getId }}/{{ event.getPlayhead }}">#{{ event.getPlayhead }}</a>
                    - {{ event.getType }}
                </h3>
            </div>
            <div class="panel-body">
                <pre>{{ event.getPayload | json_encode(128) }}</pre>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
